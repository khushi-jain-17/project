  
<section class="featured-movies">
  <h2>search results</h2>
  <div class="movie-grid margin">
    <% if @search.present? %>
      <% @search.each do |movie| %>
        <% if movie.present? %>
          <div class="movie">
            <% if movie.image.present? %>
              <%= image_tag movie.image, class: "style_image" %>
            <% else %>
              <%= image_tag "background.jpg", class: "style_image" %>
            <% end %>
            <h5 class="card-title">Movie: <%= movie.name %></h5>
            <h6><p class="card-text">Type: <%= movie.category.name %></p></h6>
            <h6><p class="card-text">Rating: <%= movie.rating %><span class="fa fa-star checked"></span></p></h6>
            <h6><p class="card-text">Released_on: <%= movie.released_on %></p></h6>
            <%= link_to 'Details', movie %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p>No results found.</p>
    <% end %>
  </div>
</section>
